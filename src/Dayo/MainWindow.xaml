<Window x:Class="Dayo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dayo"
        mc:Ignorable="d"
        Title="Dayo" Height="355" Width="280" Topmost="True" WindowStyle="None" ResizeMode="NoResize" Top="0" Left="1640" FontFamily="Global Sans Serif">
    <Grid>
        <Button x:Name="AddCheckbox" Content="&#x2610;" Width="24" HorizontalAlignment="Center" Margin="0,0,0,330" Click="AddCheckbox_Click" />
        <Button x:Name="Close" Content="x" Height="25" Width="25" VerticalAlignment="Top" HorizontalAlignment="Right" Click="Button_Click"/>
        <TextBox x:Name="MemoryList" Margin="0, 25, 0, 0" FontSize="24" AcceptsReturn="True" TextWrapping="Wrap" PreviewMouseRightButtonDown="MemoryList_MouseDown"></TextBox>
    </Grid>
</Window>
